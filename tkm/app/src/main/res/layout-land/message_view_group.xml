<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/margin_38dp"
        android:layout_height="@dimen/margin_38dp"
        android:src="@drawable/avatar"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/message_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reaction_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:textColor="@color/teal_700" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:maxWidth="@dimen/margin_400dp"
            android:paddingBottom="@dimen/margin_8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_16sp" />

    </LinearLayout>

    <com.example.homework_2.presentation.custom.FlexBoxLayout
        android:id="@+id/flex_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:flexMaxWidth="@dimen/margin_450dp" />

</merge>